<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/list_item_artist_search_rootview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_selector"
    android:minHeight="?android:listPreferredItemHeight">

    <ImageView
        android:id="@+id/list_item_artist_search_thumbnail"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/description_artist_thumbnail"/>

    <TextView
        android:id="@+id/list_item_artist_search_name"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_toEndOf="@id/list_item_artist_search_thumbnail"
        android:layout_toRightOf="@id/list_item_artist_search_thumbnail"
        android:gravity="center_vertical"/>

</RelativeLayout>
