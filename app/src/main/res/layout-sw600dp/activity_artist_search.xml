<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:divider="?android:attr/dividerHorizontal"
              android:showDividers="middle"
              android:baselineAligned="false">

    <fragment
        android:id="@+id/fragment_artist_search"
        android:name="com.dnbitstudio.spotifystreamer.ArtistSearchActivityFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        tools:layout="@layout/fragment_artist_search"/>

    <FrameLayout
        android:id="@+id/top_tracks_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        tools:layout="@layout/fragment_top_tracks"/>

</LinearLayout>